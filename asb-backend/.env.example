NODE_ENV=development
PORT=8080

MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# CORS
CORS_ORIGIN=http://localhost:3000

# JWT (will be used in Step 2)
JWT_ACCESS_SECRET=change_this_access_secret
JWT_ACCESS_EXPIRES_IN=15m

# Optional future refresh cookie (later)
JWT_REFRESH_SECRET=change_this_refresh_secret
JWT_REFRESH_EXPIRES_IN=7d

# OTP settings (Step 3)
OTP_DEV_MODE=true
OTP_TTL_SECONDS=300

# Rate limit
RATE_LIMIT_WINDOW_MIN=15
RATE_LIMIT_MAX=200

# MetaReach SMS API
METAREACH_API_KEY=your_api_key_here
METAREACH_SENDER_ID=your_sender_id_here
METAREACH_TEMPLATE_ID=your_template_id_here

# Admin Configuration
ADMIN_PHONE=9911500291
